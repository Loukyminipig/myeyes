<view class="goods_content">
	<view class="content">
		<view class="goods_price">￥{{goods_price}}</view>
		<view class="goods_title">{{goods_title}}</view>
	</view>
	<button style="width:150rpx;background-color: transparent; border:none;" open-type="share">
		<view class="share" open-type="share">
			<image src="/images/share.png"></image>
			<view class="fenxiang">分享</view>
		</view>
	</button>
</view>
<view class="message">
	<view class="goods_message">
		<view>商品评价</view>
    <view class='right'>
			<image src='/images/my_order.png'></image>
		</view>
	</view>
	<view class="goods_message">
		<view>购买须知</view>
    <view class='right'>
			<image src='/images/my_order.png'></image>
		</view>
	</view>
	<view class="goods_message">
		<view>商品规格</view>
    <view class='right'>
			<image src='/images/my_order.png'></image>
		</view>
	</view>
</view>

<!--图文详情-->
<view class="image_text">
	<view class="image_text_title">图文详情</view>
	<view>
		<image src="{{goods_img}}" mode="aspectFill"></image>
	</view>
</view>

<!--底部导航-->
<view class="footer_nav">
	<view class="nav_list">
		<navigator url="/pages/index/index">
			<image src="/images/home_page_y.png"></image>
			<view class="nav_name">首页</view>
		</navigator>
	</view>
	<view class="nav_list" bindtap="collectFun">
		<!-- <navigator url="/pages/collection/collection"> -->
		<image wx:if="{{isCollect}}" src='/images/collect_select.png'></image>
		<image wx:else src='/images/collect.png'></image>
		<view wx:if="{{!isCollect}}" class="nav_name">收藏</view>
		<view wx:else class="nav_name">已收藏</view>
		<!-- </navigator> -->
	</view>
	<view class="nav_list">
		<navigator url="/pages/cart/cart" open-type='switchTab'>
			<image src="/images/shopping.png"></image>
			<view class="nav_name">购物车</view>
		</navigator>
	</view>
	<view class="add_cart goods_buy" bindtap="addToCartFun">加入购物车</view>
	<view class="now_buy goods_buy" bindtap="buyNow">立即购买</view>

</view>
<!-- ------------------------------------分割------------------------------------------------ -->
<!--屏幕背景变暗的背景  -->
<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
<!--弹出框  -->
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
	<view class='commImg'>
		<image src='{{goods_img}}' mode="aspectFit"></image>
	</view>
	<view class='column'>
		<text class="sku-price">￥{{list.price}}</text>
		<text class="sku-title"><block wx:if="{{gg_txt==''}}">请选择规格</block><block wx:else>已选择 {{list.title}}，{{num}}个</block></text>
	</view>
	<text class="line"></text>
	<view class='guige'>
		<text class="gg-title">规格</text>
		<view class='gg'>
			<text  wx:for="{{guigeList}}" wx:key="gg" wx:for-item="item" class="{{gg_id==item.guige?'active':''}}" data-id="{{item.guige}}"  data-txt="{{item.guige}}" data-price='{{item.price}}' bindtap="filter">{{item.guige}}</text>
		</view>
	</view>
	<text class="line"></text>
	<view class="row">
		<text >数量</text>
		<view class="quantity-position">
			<view class="stepper">
				<!-- 减号 -->
				<text class="{{minusStatus}}" bindtap="bindMinus">-</text>
				<!-- 数值 -->
				<input type="number" bindblur="bindBlur" bindinput='bindManual' value="{{num}}" />
				<!-- 加号 -->
				<text class="normal" bindtap="bindPlus">+</text>
			</view>
		</view>
	</view>
	<text class="line"></text>
	<view class='btn'>
		<button wx:if="{{isBuy}}" style="margin-right:10px;" bindtap="bindBuyNow" class="button-buy">立即购买</button>
		<button wx:else style="margin-right:10px;" class="button-add" bindtap="addCart">确认</button>
	</view>
</view>
