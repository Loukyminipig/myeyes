/**index.wxss**/
.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.header {
  width: 100%;
  margin-top: 120rpx;
}

.header_up {
  z-index: 1;
  position: absolute;
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
}

.header_middle {
  z-index: 2;
  position: absolute;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
}

.head_title {
  margin-left: 400rpx;
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.header_down {
  z-index: 3;
  width: 100%;
  height: 100rpx;
}


.custom-bar {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}

.custom-bar__wrapper {
  padding: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-group {
  width: 80%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border: 5rpx solid #111;
  border-radius: 60rpx;
  padding: 0 10rpx;
}

.search-group>input {
  font-size: 25rpx;
}

.search-group>image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 20rpx
}

.image-parent {
  position: relative;
}

.image-parent image {
  width: 100%;
  height: 200%
}

.image-text {
  width: 100px;
  height: 24px;
  position: absolute;
  left: 0;
  top: 25rpx;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
  color: #fcb6e0;
}

.menu {
  padding-top: 250rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.menu_item {
  height: 200rpx;
  width: 25%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu_item_buttom {
  width: 100%;
  height: 100%;
}

.menu_choose {
  width: 100%;
  margin-top: 0rpx;
  height: 173rpx;
}

.choose_up {
  z-index: 1;
  position: absolute;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  padding-left: 500rpx;
}

.choose_middle {
  z-index: 2;
  position: absolute;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
}

.choose_title {
  margin-left: 90rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.choose_down {
  z-index: 3;
  width: 100%;
  height: 100rpx;
}

.choose-image-parent {
  position: relative;
}

.choose-image-parent image {
  width: 300rpx;
  height: 200%;
  padding-top: 20rpx;
}

.choose-image-text {
  width: 300rpx;
  height: 24px;
  position: absolute;
  left: 0;
  top: 60rpx;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
  color: #d777f5;
  font-weight: bold;
}

.info {
  width: 100%;
  height: 500rpx;
  padding-top: 30rpx;
}

.info_down {
  z-index: 2;
  width: 100%;
  height: 500rpx;
}

.info_up {
  z-index: 1;
  position: absolute;
  width: 100%;
  /* background-color: yellow; */
  margin-top: 20rpx;
  height: 420rpx;
}

.info-parent {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.info-parent text {
  padding-left: 80rpx;
  color: #6478ec;
  font-weight: 500;
}

.line {
  margin-left: 80rpx;
  width: 50%;
  height: 2rpx;
  background: grey;
}

.info-list{
  padding-top: 10rpx;
  padding-left: 50rpx;
  width: 100%;
}

.info-text{
  height: 50rpx;
  margin-top:15rpx;
  
}